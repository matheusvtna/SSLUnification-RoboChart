import utils

operation goToBehindBall(targetPosition: real * real, angleThreshold: real) {
	
	// Robot instance.
	var robot: string	
	var ball: string
	
	// States.
	initial Initial
	state GoToBehindBall {}	
	final Stop
	
	// Transitions.
	transition goToBehindBall {
		from Initial
		to GoToBehindBall
	}
	
	transition stop {		
		from GoToBehindBall
		to Stop
		condition (allyIsBehind(robot, targetPosition, angleThreshold) /\ allyIsCloseToBall(robot, ball)) 
	}
}	

