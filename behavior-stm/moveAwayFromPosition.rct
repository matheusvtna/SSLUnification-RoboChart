import utils

operation moveAwayFromPosition(frame: Frame, dangerousPosition: Position, distanceThreshold: real) {
	requires NodeStatusI
	// Robot instance.
	var robotPosition: Position	
		
	// States.
	initial Initial
	state MoveAWay {}	
	final Stop
	
	// Transitions.
	transition start {
		from Initial
		to MoveAWay
	}
	
	transition stop {		
		from MoveAWay
		to Stop
		condition getDistance(robotPosition, dangerousPosition) > distanceThreshold
		action isComplete = true
	}
}

