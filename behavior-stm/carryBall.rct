import utils


operation carryBall(frame: Frame, targetPosition: Position, distanceThreshold: real) {
	requires NodeStatusI
	var ballPosition: Position
	
	// States.
	initial Initial
	state CarryBall {}	
	final Stop
	
	// Transitions.
	transition start {
		from Initial
		to CarryBall
	}
	
	transition stop {		
		from CarryBall
		to Stop
		condition getDistance(ballPosition, targetPosition) < distanceThreshold
		action isComplete = true
	}
}
