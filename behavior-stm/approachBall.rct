import utils

operation approachBall(ball: Ball) {
	requires NodeStatusI
	
	// Robot instance.
	var robot: Robot	
	
	// States.
	initial Initial
	state Approach {}	
	final Stop
	
	// Transitions.
	transition start {
		from Initial
		to Approach
	}
	
	transition stop {		
		from Approach
		to Stop
		condition allyHasBall(robot, ball)
		action nodeStatus = NODE_STATUS::DONE
	}
}	

